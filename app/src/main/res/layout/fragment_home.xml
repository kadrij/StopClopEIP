<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.eip.stopclopeip.HomeFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/progress_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/error_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/error_icon"
            app:layout_constraintBottom_toBottomOf="@+id/error_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.86"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_error_36dp" />

        <TextView
            android:id="@+id/error_message"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Une erreur est survenue"
            android:textSize="24sp"
            android:textStyle="bold" />
    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/home_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.stopclop.HomeFragment">

        <TextView
            android:id="@+id/sevrage_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:text="Aucune consomation depuis"
            android:textColor="@color/black_overlay"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/day_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/record_label"
            android:layout_alignLeft="@+id/sevrage_value"
            android:layout_alignStart="@+id/sevrage_value"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:gravity="end"
            android:text="Jours"
            android:textAlignment="viewEnd"
            android:textColor="@color/black_overlay"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/hour_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sevrage_value"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Heures"
            android:textColor="@color/black_overlay"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/minute_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/hour_label"
            android:layout_alignBottom="@+id/hour_label"
            android:layout_alignEnd="@+id/sevrage_value"
            android:text="Minutes"
            android:textColor="@color/black_overlay"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/record_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sevrage_label"
            android:layout_alignStart="@+id/sevrage_label"
            android:layout_below="@+id/hour_label"
            android:layout_marginTop="8dp"
            android:text="Record personnel :"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/record_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cactos_image"
            android:layout_toEndOf="@+id/record_label"
            android:layout_toRightOf="@+id/record_label"
            android:paddingLeft="10dp"
            android:text="00 : 00 : 00"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light" />

        <ImageView
            android:id="@+id/cactos_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/record_label"
            android:layout_marginTop="35dp"
            android:src="@drawable/cactos_le_cactus"
            android:visibility="visible" />

        <Chronometer
            android:id="@+id/sevrage_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sevrage_label"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:format="00 : 00 : 00"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="45sp" />

    </RelativeLayout>

</FrameLayout>
